# ----------------------------
# Étape 1 : Build PHP + Composer
# ----------------------------
FROM php:8.3-fpm AS build

# Installer dépendances système
RUN apt-get update && apt-get install -y \
    libpng-dev libjpeg62-turbo-dev libfreetype6-dev libpq-dev libonig-dev \
    zip unzip git curl pkg-config nginx \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install pdo pdo_pgsql pdo_mysql mbstring exif pcntl bcmath gd \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Installer Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Définir le répertoire de travail
WORKDIR /var/www

# Copier le code Laravel
COPY . .

# Installer les dépendances Laravel
RUN composer install --no-dev --optimize-autoloader

# Créer les dossiers nécessaires et définir les permissions
RUN mkdir -p /var/www/storage /var/www/bootstrap/cache \
    && chown -R www-data:www-data /var/www \
    && chmod -R 755 /var/www/storage /var/www/bootstrap/cache

# ----------------------------
# Étape 2 : Image finale Nginx + PHP-FPM
# ----------------------------
FROM nginx:alpine

# Copier PHP-FPM depuis l'étape précédente
COPY --from=build /usr/local/etc/php /usr/local/etc/php
COPY --from=build /usr/local/bin/php* /usr/local/bin/
COPY --from=build /usr/local/sbin/php-fpm /usr/local/sbin/php-fpm
COPY --from=build /var/www /var/www

# Copier la configuration Nginx
COPY ./nginx/default.conf /etc/nginx/conf.d/default.conf

WORKDIR /var/www

EXPOSE 80

# Lancer PHP-FPM + Nginx
CMD sh -c "php-fpm -D && nginx -g 'daemon off;'"
