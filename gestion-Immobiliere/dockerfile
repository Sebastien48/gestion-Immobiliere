# ----------------------------
# Image de base PHP-FPM
# ----------------------------
FROM php:8.3-fpm

# Installer dépendances système + Nginx
RUN apt-get update && apt-get install -y \
    nginx \
    libpng-dev libjpeg62-turbo-dev libfreetype6-dev libpq-dev libonig-dev \
    zip unzip git curl pkg-config \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install pdo pdo_pgsql pdo_mysql mbstring exif pcntl bcmath gd \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Installer Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Définir le répertoire de travail
WORKDIR /var/www

# Copier le code Laravel
COPY . .

# Installer les dépendances Laravel
RUN composer install --no-dev --optimize-autoloader

# Créer dossiers et donner les bonnes permissions
RUN mkdir -p /var/www/storage /var/www/bootstrap/cache \
    && chown -R www-data:www-data /var/www \
    && chmod -R 755 /var/www/storage /var/www/bootstrap/cache

# Copier configuration Nginx
COPY ./nginx/default.conf /etc/nginx/conf.d/default.conf


# Forcer PHP-FPM à écouter sur 127.0.0.1:9000 (pour Nginx)
RUN sed -i 's/listen = .*/listen = 127.0.0.1:9000/' /usr/local/etc/php-fpm.d/www.conf

# Exposer le port HTTP
EXPOSE 80

# Lancer PHP-FPM + Nginx
CMD sh -c "php-fpm -D && nginx -g 'daemon off;'"
