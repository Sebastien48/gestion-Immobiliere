# ----------------------------
# Image de base PHP-FPM 8.3
# ----------------------------
FROM php:8.3-fpm

# Installer dépendances système + Nginx + librairies PHP
RUN apt-get update && apt-get install -y \
    nginx \
    git curl zip unzip pkg-config \
    libpng-dev libjpeg-dev libfreetype6-dev \
    libpq-dev libzip-dev libicu-dev libonig-dev \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j"$(nproc)" \
       pdo pdo_pgsql pdo_mysql mbstring exif pcntl bcmath gd zip intl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Installer Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Définir le répertoire de travail
WORKDIR /var/www

# Copier le code Laravel
COPY . .

# Installer les dépendances Laravel
RUN composer install --no-dev --optimize-autoloader

# Créer les dossiers et donner les permissions correctes
RUN mkdir -p /var/www/storage /var/www/bootstrap/cache \
    && chown -R www-data:www-data /var/www \
    && chmod -R 755 /var/www/storage /var/www/bootstrap/cache

# Supprimer configs Nginx par défaut pour éviter doublons
RUN rm -f /etc/nginx/conf.d/default.conf \
    /etc/nginx/sites-enabled/default \
    /etc/nginx/sites-available/default

# Copier la configuration Nginx pour Laravel
COPY ./nginx/default.conf /etc/nginx/conf.d/default.conf

# Forcer PHP-FPM à écouter sur TCP pour Nginx
RUN sed -i 's/listen = .*/listen = 127.0.0.1:9000/' /usr/local/etc/php-fpm.d/www.conf

# Exposer le port HTTP
EXPOSE 80

# Lancer PHP-FPM + Nginx
CMD sh -c "php-fpm -D && nginx -g 'daemon off;'"
