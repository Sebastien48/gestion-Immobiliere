# Base image PHP-FPM
FROM php:8.3-fpm

ARG DEBIAN_FRONTEND=noninteractive

# Installer Nginx + dépendances nécessaires aux extensions PHP
RUN apt-get update && apt-get install -y \
    nginx \
    git curl zip unzip pkg-config \
    libpng-dev libjpeg62-turbo-dev libfreetype6-dev \
    libpq-dev \
    libzip-dev \
    libicu-dev \
  && docker-php-ext-configure gd --with-freetype --with-jpeg \
  && docker-php-ext-install -j"$(nproc)" pdo pdo_pgsql pdo_mysql mbstring exif pcntl bcmath gd zip intl \
  && rm -rf /var/lib/apt/lists/*

# Installer Composer (depuis l'image officielle)
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Répertoire de travail
WORKDIR /var/www

# Copier le code de l'application
# Astuce: utilise un .dockerignore pour éviter d'embarquer node_modules, vendor, etc.
COPY . /var/www

# Installer les dépendances PHP (prod)
ENV COMPOSER_ALLOW_SUPERUSER=1
RUN composer install --no-dev --prefer-dist --no-interaction --optimize-autoloader

# Créer dossiers et régler les permissions
RUN mkdir -p /var/www/storage /var/www/bootstrap/cache \
  && chown -R www-data:www-data /var/www \
  && find /var/www/storage -type d -exec chmod 775 {} \; \
  && find /var/www/bootstrap/cache -type d -exec chmod 775 {} \;

# -----------------------------
# Nginx
# -----------------------------

# Supprimer les configs par défaut
RUN rm -f /etc/nginx/conf.d/default.conf \
       /etc/nginx/sites-enabled/default \
       /etc/nginx/sites-available/default

# Copier la config Nginx (assure-toi que root pointe vers /var/www/public)
COPY ./nginx/default.conf /etc/nginx/conf.d/default.conf

# -----------------------------
# PHP-FPM
# -----------------------------

# PHP-FPM écoute en TCP (Nginx proxy_pass vers 127.0.0.1:9000)
RUN sed -i 's|^listen = .*|listen = 127.0.0.1:9000|' /usr/local/etc/php-fpm.d/www.conf

# Exposer port HTTP
EXPOSE 80

# Arrêt propre
STOPSIGNAL SIGQUIT

# Lancer PHP-FPM (daemon) + Nginx (foreground)
CMD sh -c "php-fpm -D && nginx -g 'daemon off;'"