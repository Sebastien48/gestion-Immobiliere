# Image de base PHP 8.3 avec FPM
FROM php:8.3-fpm

# Installer dépendances système nécessaires + nginx + supervisor
RUN apt-get update && apt-get install -y \
    build-essential \
    libpng-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    libpq-dev \
    libonig-dev \
    zip \
    unzip \
    git \
    curl \
    pkg-config \
    nginx \
    supervisor \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install pdo pdo_pgsql pdo_mysql mbstring exif pcntl bcmath gd \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Installer Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Définir le répertoire de travail
WORKDIR /var/www

# Copier uniquement composer.json et composer.lock (meilleure utilisation du cache Docker)
COPY composer.json composer.lock ./

# Installer dépendances PHP (sans scripts pour éviter artisan error)
RUN composer install --no-dev --optimize-autoloader --no-scripts

# Copier tout le code Laravel
COPY . .

# Exécuter les scripts Composer (artisan est maintenant présent)
RUN composer run-script post-autoload-dump || true

# Créer dossiers nécessaires + permissions


    RUN mkdir -p /var/www/storage /var/www/bootstrap/cache \
    && chown -R www-data:www-data /var/www \
    && chmod -R 775 /var/www/storage /var/www/bootstrap/cache

# Copier configuration Nginx
COPY ./nginx.conf /etc/nginx/nginx.conf

# Copier configuration Supervisor
COPY ./supervisord.conf /etc/supervisor/conf.d/supervisord.conf

# Copier entrypoint
COPY ./entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

# Exposer port 80
EXPOSE 80

# Lancer via entrypoint (migrations + cache + supervisor)
CMD ["/usr/local/bin/entrypoint.sh"]
